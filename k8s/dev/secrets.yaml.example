apiVersion: v1
kind: Secret
metadata:
  name: suneasy-secrets
  namespace: suneasy-dev
type: Opaque
stringData:
  # ============================================================================
  # DATABASE CREDENTIALS
  # ============================================================================
  DB_USER: "suneasy_user"
  DB_PASSWORD: "suneasy_password"  # Change in production!
  DB_HOST: "postgres"
  DB_PORT: "5432"

  # ============================================================================
  # JWT CONFIGURATION
  # ============================================================================
  JWT_SECRET_KEY: "CHANGE_THIS_TO_A_RANDOM_256_BIT_KEY_IN_BASE64"
  # Generate with: openssl rand -base64 32
  JWT_ISSUER: "SunEasy.Dev"
  JWT_AUDIENCE: "SunEasy.Dev.Users"
  JWT_EXPIRATION_MINUTES: "60"
  JWT_REFRESH_EXPIRATION_DAYS: "30"

  # ============================================================================
  # AWS S3 CONFIGURATION (Required - You must provide these)
  # ============================================================================
  AWS_ACCESS_KEY_ID: "YOUR_AWS_ACCESS_KEY_ID_HERE"
  AWS_SECRET_ACCESS_KEY: "YOUR_AWS_SECRET_ACCESS_KEY_HERE"
  AWS_REGION: "us-east-1"  # Change to your region
  AWS_S3_BUCKET: "your-test-bucket-name"
  AWS_S3_ENDPOINT: ""  # Leave empty for AWS S3, or specify custom endpoint

  # ============================================================================
  # STRIPE CONFIGURATION (Test/Sandbox Keys)
  # ============================================================================
  STRIPE_PUBLISHABLE_KEY: "pk_test_YOUR_STRIPE_PUBLISHABLE_KEY_HERE"
  STRIPE_SECRET_KEY: "sk_test_YOUR_STRIPE_SECRET_KEY_HERE"
  STRIPE_WEBHOOK_SECRET: "whsec_YOUR_WEBHOOK_SECRET_HERE"

  # ============================================================================
  # PAYPAL CONFIGURATION (Sandbox)
  # ============================================================================
  PAYPAL_CLIENT_ID: "YOUR_PAYPAL_SANDBOX_CLIENT_ID_HERE"
  PAYPAL_CLIENT_SECRET: "YOUR_PAYPAL_SANDBOX_CLIENT_SECRET_HERE"
  PAYPAL_MODE: "sandbox"  # sandbox or live

  # ============================================================================
  # FIREBASE CONFIGURATION
  # ============================================================================
  # Get from Firebase Console > Project Settings > Service Accounts
  FIREBASE_PROJECT_ID: "your-firebase-project-id"
  FIREBASE_PRIVATE_KEY_ID: "your-private-key-id"
  FIREBASE_PRIVATE_KEY: |
    -----BEGIN PRIVATE KEY-----
    YOUR_FIREBASE_PRIVATE_KEY_HERE
    -----END PRIVATE KEY-----
  FIREBASE_CLIENT_EMAIL: "firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com"
  FIREBASE_CLIENT_ID: "123456789012345678901"
  FIREBASE_API_KEY: "AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
  FIREBASE_AUTH_DOMAIN: "your-project.firebaseapp.com"
  FIREBASE_STORAGE_BUCKET: "your-project.appspot.com"
  FIREBASE_MESSAGING_SENDER_ID: "123456789012"
  FIREBASE_APP_ID: "1:123456789012:web:abcdef1234567890"
  FIREBASE_MEASUREMENT_ID: "G-XXXXXXXXXX"

  # ============================================================================
  # SOCIAL LOGIN - FACEBOOK
  # ============================================================================
  FACEBOOK_APP_ID: "YOUR_FACEBOOK_APP_ID_HERE"
  FACEBOOK_APP_SECRET: "YOUR_FACEBOOK_APP_SECRET_HERE"

  # ============================================================================
  # SOCIAL LOGIN - GOOGLE
  # ============================================================================
  GOOGLE_CLIENT_ID: "YOUR_GOOGLE_CLIENT_ID_HERE.apps.googleusercontent.com"
  GOOGLE_CLIENT_SECRET: "YOUR_GOOGLE_CLIENT_SECRET_HERE"
  GOOGLE_WEB_CLIENT_ID: "YOUR_GOOGLE_WEB_CLIENT_ID_HERE.apps.googleusercontent.com"

  # ============================================================================
  # SOCIAL LOGIN - APPLE
  # ============================================================================
  APPLE_CLIENT_ID: "com.suneasy.app"
  APPLE_TEAM_ID: "YOUR_APPLE_TEAM_ID_HERE"
  APPLE_KEY_ID: "YOUR_APPLE_KEY_ID_HERE"
  APPLE_PRIVATE_KEY: |
    -----BEGIN PRIVATE KEY-----
    YOUR_APPLE_PRIVATE_KEY_HERE
    -----END PRIVATE KEY-----

  # ============================================================================
  # REDIS CONFIGURATION
  # ============================================================================
  REDIS_HOST: "redis"
  REDIS_PORT: "6379"
  REDIS_PASSWORD: ""  # Empty for dev, set in production
  REDIS_DB: "0"

  # ============================================================================
  # RABBITMQ CONFIGURATION
  # ============================================================================
  RABBITMQ_HOST: "rabbitmq"
  RABBITMQ_PORT: "5672"
  RABBITMQ_USER: "suneasy"
  RABBITMQ_PASSWORD: "suneasy_password"
  RABBITMQ_VHOST: "/"

  # ============================================================================
  # ELASTICSEARCH CONFIGURATION
  # ============================================================================
  ELASTICSEARCH_URL: "http://elasticsearch:9200"
  ELASTICSEARCH_USERNAME: ""  # Empty for dev
  ELASTICSEARCH_PASSWORD: ""  # Empty for dev
  ELASTICSEARCH_INDEX_PREFIX: "suneasy_dev"

  # ============================================================================
  # SMTP/EMAIL CONFIGURATION
  # ============================================================================
  # For development, using MailHog (no auth required)
  SMTP_HOST: "mailhog"
  SMTP_PORT: "1025"
  SMTP_USERNAME: ""
  SMTP_PASSWORD: ""
  SMTP_FROM_EMAIL: "noreply@suneasy.app"
  SMTP_FROM_NAME: "SunEasy"
  SMTP_USE_TLS: "false"

  # For production, use real SMTP (e.g., SendGrid, AWS SES, etc.)
  # SMTP_HOST: "smtp.sendgrid.net"
  # SMTP_PORT: "587"
  # SMTP_USERNAME: "apikey"
  # SMTP_PASSWORD: "YOUR_SENDGRID_API_KEY"
  # SMTP_USE_TLS: "true"

  # ============================================================================
  # SMS CONFIGURATION (Optional - Twilio)
  # ============================================================================
  TWILIO_ACCOUNT_SID: "YOUR_TWILIO_ACCOUNT_SID_HERE"
  TWILIO_AUTH_TOKEN: "YOUR_TWILIO_AUTH_TOKEN_HERE"
  TWILIO_PHONE_NUMBER: "+1234567890"

  # ============================================================================
  # ENCRYPTION KEYS
  # ============================================================================
  ENCRYPTION_KEY: "CHANGE_THIS_TO_A_RANDOM_256_BIT_KEY"
  # Generate with: openssl rand -hex 32

  # ============================================================================
  # API KEYS FOR EXTERNAL SERVICES
  # ============================================================================
  GOOGLE_MAPS_API_KEY: "YOUR_GOOGLE_MAPS_API_KEY_HERE"
  GOOGLE_PLACES_API_KEY: "YOUR_GOOGLE_PLACES_API_KEY_HERE"

  # ============================================================================
  # DEVELOPMENT FLAGS
  # ============================================================================
  ENVIRONMENT: "development"
  DEBUG_MODE: "true"
  ENABLE_SWAGGER: "true"
  ENABLE_DETAILED_ERRORS: "true"
  CORS_ALLOWED_ORIGINS: "https://admin.test.suneasy.app,https://dashboard.test.suneasy.app,https://www.test.suneasy.app,https://app.test.suneasy.app,https://client.test.suneasy.app,https://business.test.suneasy.app"

---
# Separate secret for PostgreSQL (used by postgres-statefulset)
apiVersion: v1
kind: Secret
metadata:
  name: postgres-secrets
  namespace: suneasy-dev
type: Opaque
stringData:
  POSTGRES_USER: "suneasy_user"
  POSTGRES_PASSWORD: "suneasy_password"
  POSTGRES_DB: "postgres"
